<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @uploader.title %>
</p>

<p>
  <strong>Info:</strong>
  <%= @uploader.info %>
</p>

<p>
  <strong>Photo:</strong>
  <% if @uploader.photo.present? %>
    <%= image_tag(@uploader.photo, style: 'width:100%') %>
  <% else %>
    "No photo available"
  <% end %>
</p>

<p>
  <strong>Music:</strong>
  <% if @uploader.music.present? %>
    <%= audio_tag(@uploader.music, controls:true, style: 'width:100%', id:'player') %>
  <% else %>
    "No music available"
  <% end %>
</p>

<p>
  <strong>Movie:</strong>
  <% if @uploader.movie.present? %>
    <%= image_tag(@uploader.movie, style: 'width:100%') %>
  <% else %>
    "No movie available"
  <% end %>
</p>

<p>
  <strong>Music Player:</strong>
    <div class="music__player">
      <%= link_to controls_uploader_path(@uploader), remote: true do %>
        <ion-icon name="play-circle" class="hello"></ion-icon>
      <% end %>
    </div>
</p>

<%= link_to 'Edit', edit_uploader_path(@uploader) %> |
<%= link_to 'Back', uploaders_path %>
